<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:state_pressed="false"
          android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#00bfff"
                android:endColor="#00ffff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#666600"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="10dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_pressed="false"
          android:state_enabled="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#A9A9A9"
                android:endColor="#A9A9A9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00bfff"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="10dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>